<h1><%= @category.name %></h1>
<nav class="navbar navbar-default" role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      <span class="sr-only">選單切換</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>

  <div class="collapse navbar-collapse navbar-ex1-collapse">
    <ul class="nav nav-tabs">
    <li class="nav nav-item"><%=link_to "Home", root_path%></li>
    <% @categories.each do |category| %>
      <li class="nav-item">
        <%= link_to category.name, category_path(category) %>
      </li>
    <% end %>
      <% if current_user %>
        <li class="nav-item"><%= link_to "購物車", cart_path%></li>
        <li class="nav-item">
          <%= link_to "登出", destroy_user_session_path , method: :delete%>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "登入", new_user_session_path%>
        </li>
      <% end %>

    </ul>
  </div>
</nav>

<div class="col-sm-1 col-md-0"></div>
  <div class='col-sm-10 '>
    <div class="row">
      <% @products.each do |product| %>
        <div class='col-sm-3'>
          <div class='media'>
            <%= image_tag Faker::Placeholdit.image("240x160", "png", 'ccc'), class: 'pull-left' %>
            <div class='media-body'>
              <h4 class='product-name'><%= link_to product.name, category_product_path(@category, product) %></h4>
              <div class='product-description'><%=truncate product.discription , length: 30 %></div>
              <div class='product-price'><%= number_to_currency product.price %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <%= paginate @products %>
  </div>