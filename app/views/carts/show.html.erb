<h1>購物車</h1>

<% if @cart.cart_items.empty?%>
	<h2>購物車是空的</h2>
<% else %>

	  <table class="table">
    <thead>
      <tr>
        <th>商品</th>
        <th>定價</th>
        <th>數量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= number_to_currency item.product.price %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency item.subtotal %></td>
          <td><%=link_to "X",category_product_path(item.product.category,item.product), :method => "delete",:class =>"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">總計</th>
        <td><%=number_to_currency @cart.total %></td>
      </tr>
    </tfoot>
  </table>
<% end %>

<%=link_to "清空購物車", cart_path,:method => "delete",:class =>"btn btn-info"%>

  <div class="text-center">
    <%= link_to "結帳", new_order_path, class: 'btn btn-success' %>
  </div>
